{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 19,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "ninja-system",
      "displayName": "Ninja + System libs",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_PREFIX_PATH": "C:/vcpkg/installed/x64-windows;C:/Program Files (x86)/Microsoft Visual Studio/2022/Enterprise/SDK"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "ninja-system-rel",
      "configurePreset": "ninja-system",
      "configuration": "Release"
    }
  ]
}
